{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-eslint-rules" // https://github.com/buzinas/tslint-eslint-rules
	],
	"jsRules": {
		"no-console": false
	},
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"align": [
			true,
			"parameters",
			"statements",
			"members"
		],
		"array-bracket-spacing": [
			true,
			"never"
		],
		"ban-comma-operator": true,
		"binary-expression-operand-order": true,
		"block-spacing": [
			true,
			"always"
		],
		"brace-style": [
			true,
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"comment-format": [
			true,
			"check-space"
		],
		"curly": true,
		"encoding": true,
		"eofline": false,
		"forin": true,
		"indent": [
			true,
			"tabs",
			4
		],
		"jsdoc-format": [
			true,
			"check-multiline-start"
		],
		// "jsx-alignment": true, // tslint-react overrides
		"jsx-boolean-value": true, // tslint-react overrides
		"jsx-curly-spacing": [true], // tslint-react overrides
		"jsx-equals-spacing": [true, "never"], // tslint-react overrides
		"jsx-key": true, // tslint-react overrides
		"jsx-no-bind": true, // tslint-react overrides
		"jsx-no-lambda": false, // tslint-react overrides
		"jsx-no-multiline-js": false, // tslint-react overrides
		"jsx-no-string-ref": true, // tslint-react overrides
		"jsx-self-close": true, // tslint-react overrides
		"jsx-wrap-multiline": true, // tslint-react overrides
		"label-position": true,
		"linebreak-style": [
			true,
			"LF"
		],
		"max-line-length": false,
		"new-parens": true,
		"no-any": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": true,
		"no-console": false,
		"no-constant-condition": true,
		"no-construct": true,
		"no-control-regex": true,
		"no-debugger": true,
		"no-default-export": true,
		"no-duplicate-case": true,
		"no-duplicate-imports": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-variable": [
			true,
			"check-parameters"
		],
		"no-dynamic-delete": false,
		"no-empty": true,
		"no-empty-character-class": true,
		"no-eval": true,
		"no-ex-assign": true,
		"no-extra-boolean-cast": false,
		"no-extra-semi": true,
		"no-implicit-dependencies": false,
		"no-inner-declarations": true,
		"no-invalid-regexp": true,
		"no-invalid-template-strings": true,
		"no-invalid-this": [
			false,
			"check-function-in-method"
		],
		"no-magic-numbers": true,
		"no-multi-spaces": true,
		"no-parameter-reassignment": true,
		"no-regex-spaces": true,
		"no-require-imports": true,
		"no-shadowed-variable": [
			true,
			{
				"class": true,
				"enum": true,
				"function": true,
				"interface": false,
				"namespace": true,
				"typeAlias": false,
				"typeParameter": false
			}
		],
		"no-string-throw": true,
		"no-submodule-imports": true,
		"no-switch-case-fall-through": true,
		"no-this-assignment": [
			true,
			{
				"allow-destructuring": true,
				"allowed-names": [
					"^self$"
				]
			}
		],
		"no-trailing-whitespace": [
			true,
			"ignore-comments"
		],
		"no-unexpected-multiline": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-use-before-declare": true,
		"no-var-keyword": true,
		"object-curly-spacing": [
			true,
			"always"
		],
		"object-literal-key-quotes": [
			true,
			"consistent-as-needed"
		],
		"object-literal-shorthand": false,
		"object-literal-sort-keys": [
			true,
			"ignore-case"
		],
		"one-variable-per-declaration": [
			true,
			"ignore-for-loop"
		],
		"ordered-imports": [
			true,
			{
				"import-sources-order": "any",
				"module-source-path": "full",
				"named-imports-order": "case-insensitive"
			}
		],
		"prefer-conditional-expression": [
			true,
			"check-else-if"
		],
		"prefer-const": true,
		"prefer-function-over-method": [
			true,
			"allow-public",
			"allow-protected"
		],
		"prefer-object-spread": true,
		"prefer-switch": true,
		"prefer-template": [
			true,
			"allow-single-concat"
		],
		"prefer-while": true,
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"radix": true,
		"semicolon": [
			true,
			"always"
		],
		"space-in-parens": [
			true,
			"never"
		],
		"space-within-parens": [
			true,
			0
		],
		"switch-default": true,
		"ter-arrow-body-style": [
			true,
			"always"
		],
		"ter-arrow-parens": [
			true,
			"always"
		],
		"ter-arrow-spacing": [
			true,
			{
				"after": true,
				"before": true
			}
		],
		"ter-computed-property-spacing": [
			true,
			"never"
		],
		"ter-func-call-spacing": [
			true,
			"never"
		],
		"ter-newline-after-var": [
			true,
			"always"
		],
		"ter-no-irregular-whitespace": true,
		"ter-no-mixed-spaces-and-tabs": {
			"smartTabs": true,
			"type": "tabs"
		},
		"ter-no-proto": true,
		"ter-no-script-url": false,
		"ter-no-self-compare": true,
		"ter-no-sparse-arrays": true,
		"ter-no-tabs": false,
		"ter-padded-blocks": [
			true,
			"never"
		],
		"ter-prefer-arrow-callback": [
			true
		],
		"trailing-comma": [
			true,
			{
				"esSpecCompliant": true,
				"multiline": {
					"arrays": "always",
					"functions": "never",
					"objects": "always",
					"typeLiterals": "ignore"
				}
			}
		],
		"triple-equals": [
			true,
			"allow-undefined-check",
			"allow-null-check"
		],
		"typedef": [
			true,
			"array-destructuring",
			"arrow-call-signature",
			"arrow-parameter",
			"call-signature",
			"member-variable-declaration",
			"object-destructuring",
			"property-declaration",
			"variable-declaration"
		],
		"use-isnan": true,
		"valid-jsdoc": false,
		"valid-typeof": true,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			// "check-operator",
			"check-separator",
			"check-type",
			"check-typecast",
			"check-type-operator",
			"check-rest-spread"
			// "check-postbrace"
		]
	}
}
